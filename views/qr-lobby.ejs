<!DOCTYPE html>
<html>
<head>
  <title>QR Lobby</title>
</head>
<body>
  <h1>QR Lobby</h1>
  <img src="<%= qrCodeUrl %>" alt="QR Code">
  <ul id="participants">
    <% participants.forEach(participant => { %>
      <li style="color: <%= participant.color %>"><%= participant.name %></li>
    <% }) %>
  </ul>
  <form action="/bill/join/<%= billId %>" method="post">
    <label for="name">Enter your name:</label>
    <input type="text" id="name" name="name" required>
    <button type="submit">Join</button>
  </form>
  <form action="/bill/start/<%= billId %>" method="post">
    <button type="submit">Start Splitting</button>
  </form>
</body>
</html>
